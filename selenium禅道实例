# Generated by Selenium IDE
import unittest

import pytest
import time
import json
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.action_chains import ActionChains
from selenium.webdriver.support import expected_conditions
from selenium.webdriver.support.wait import WebDriverWait
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.desired_capabilities import DesiredCapabilities


class TestChandao(unittest.TestCase):

    driver = None

    @classmethod
    def setUpClass(cls):
        cls.driver = webdriver.Firefox()
        cls.vars = {}

        # 登录
        cls.driver.get("http://cd.smileteeth.cn:2218/zentao/user-login.html")
        cls.driver.set_window_size(1936, 1056)
        cls.driver.find_element(By.ID, "account").click()
        cls.driver.find_element(By.ID, "account").send_keys("lanlifang")
        time.sleep(3)
        cls.driver.find_element(By.NAME, "password").click()
        cls.driver.find_element(By.NAME, "password").send_keys("123456")
        time.sleep(3)
        cls.driver.find_element(By.ID, "submit").click()
        time.sleep(3)

    @classmethod
    def tearDownClass(cls):
        cls.driver.quit()

    # 提交第一个bug
    def test_01_addBug(self):
        print("用例1开始！")
        self.driver.find_element(By.LINK_TEXT, "测试").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, "#subNavbar li:nth-child(1) > a").click()
        time.sleep(3)
        self.driver.find_element(By.LINK_TEXT, "提Bug").click()
        time.sleep(3)
        element = self.driver.find_element(By.CSS_SELECTOR, "tr:nth-child(3) .btn")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).perform()
        self.driver.find_element(By.CSS_SELECTOR, "#openedBuild_chosen > .chosen-choices").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, ".chosen-results > li").click()
        time.sleep(3)
        self.driver.find_element(By.ID, "title").click()
        time.sleep(3)
        element = self.driver.find_element(By.CSS_SELECTOR, "#assignedTo_chosen span")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).click_and_hold().perform()
        element = self.driver.find_element(By.CSS_SELECTOR, "#assignedTo_chosen input")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).release().perform()
        self.driver.find_element(By.CSS_SELECTOR, ".active-result:nth-child(3)").click()
        time.sleep(3)
        self.driver.find_element(By.ID, "title").click()
        time.sleep(3)
        self.driver.find_element(By.ID, "title").send_keys("bug标题1")
        self.driver.switch_to.frame(1)
        self.driver.find_element(By.CSS_SELECTOR, ".article-content").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, ".article-content").send_keys("bug问题内容描述1")
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, "html").click()
        time.sleep(3)
        self.driver.switch_to.default_content()
        self.driver.find_element(By.ID, "submit").click()
        time.sleep(3)
        print("用例1结束！")

    # 提交第二个bug
    def test_02_addBug(self):
        print("用例2开始！")
        self.driver.find_element(By.LINK_TEXT, "提Bug").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, "#openedBuild_chosen > .chosen-choices").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, ".chosen-results > li").click()
        time.sleep(3)
        element = self.driver.find_element(By.CSS_SELECTOR, "#assignedTo_chosen span")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).click_and_hold().perform()
        element = self.driver.find_element(By.CSS_SELECTOR, "#assignedTo_chosen input")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).release().perform()
        self.driver.find_element(By.CSS_SELECTOR, ".active-result:nth-child(3)").click()
        time.sleep(3)
        self.driver.find_element(By.ID, "title").click()
        time.sleep(3)
        self.driver.find_element(By.ID, "title").send_keys("bug标题2")
        self.driver.switch_to.frame(1)
        self.driver.find_element(By.CSS_SELECTOR, ".article-content").click()
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, ".article-content").send_keys("bug问题内容描述2")
        time.sleep(3)
        self.driver.find_element(By.CSS_SELECTOR, "html").click()
        time.sleep(3)
        self.driver.switch_to.default_content()
        self.driver.find_element(By.ID, "submit").click()
        time.sleep(3)
        print("用例2结束！")


if __name__ == '__main__':
    # 执行所有用例
    unittest.main()
